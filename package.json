{
    "name": "forsteri",
    "description": "Web component with built-in Virtual DOM in 1KB.",
    "version": "0.0.12",
    "main": "index.js",
    "typings": "dist/index.d.ts",
    "keywords": [
        "forsteri",
        "web component",
        "virtual dom",
        "dom diff",
        "web component vdom"
    ],
    "repository": "https://github.com/SaltyAom/forsteri",
    "bugs": "https://github.com/SaltyAom/issues",
    "homepage": "https://github.com/SaltyAom/forsteri",
    "license": "MIT",
    "scripts": {
        "build": "yarn build:js && yarn build:pragma && yarn build:ts && yarn build:compress && yarn build:size",
        "build:js": "tsc --project tsconfig-js.json",
        "build:ts": "rm -rf dist && tsc",
        "build:compress": "terser dist/index.js -o dist/index.js --compress --mangle --wrap exports",
        "build:size": "cd dist && ls -lh",
        "build:pragma": "tsc --project tsconfig-pragma.json",
        "release": "yarn build && yarn publish"
    },
    "devDependencies": {
        "terser": "^4.6.10",
        "typescript": "^3.8.3"
    }
}
